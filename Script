ContentArea.Parent = MainFrame


----------------------------------------------------------------------
-- HELPER FUNCTIONS
----------------------------------------------------------------------

-- Function to create a standard button
local function createButton(name, text, onClickFunction, parentFrame)
    local Button = Instance.new("TextButton")
    Button.Name = name
    Button.Size = UDim2.new(1, 0, 0, 40) -- Full width, 40px height
    Button.Text = text -- Now guaranteed to be a string
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.BackgroundColor3 = Color3.fromRGB(50, 50, 75)
    Button.BorderSizePixel = 0
    Button.Font = Enum.Font.SourceSansSemibold
    Button.TextSize = 16
    Button.Parent = parentFrame
    
    local Corner = Instance.new("UICorner")
    Corner.CornerRadius = UDim.new(0, 8)
    Corner.Parent = Button
    
    -- Connection
    Button.MouseButton1Click:Connect(onClickFunction)
    
    -- Hover effect
    Button.MouseEnter:Connect(function()
        Button.BackgroundColor3 = ACCENT_COLOR
    end)
    Button.MouseLeave:Connect(function()
        Button.BackgroundColor3 = Color3.fromRGB(50, 50, 75)
    end)
    
    return Button
end

-- Function to force the ScrollingFrame to update its canvas size based on content
local function updateCanvasSize(scrollingFrame, containerFrame, layout)
    -- Wait until the layout is calculated
    layout:GetPropertyChangedSignal("AbsoluteContentSize"):Wait()
    
    -- 30 is the vertical padding (15 top + 15 bottom)
    local contentHeight = layout.AbsoluteContentSize.Y + 30 
    
    -- Resize the ButtonContainer frame vertically
    containerFrame.Size = UDim2.new(1, 0, 0, contentHeight)

    -- Set CanvasSize to match the container's final size
    scrollingFrame.CanvasSize = UDim2.new(0, 0, 0, contentHeight)
    scrollingFrame.CanvasPosition = Vector2.new(0, 0) -- Reset scroll to top
end

-- Function to handle tab switching
local function switchTab(tabName)
    if ACTIVE_TAB == tabName and MainFrame.Visible then return end

    -- Deactivate all content frames
    for _, frame in pairs(CONTENT_FRAMES) do
        frame.Visible = false
    end

    -- Deactivate all tab buttons (visual change)
    for name, button in pairs(TAB_BUTTONS) do
        button.BackgroundColor3 = TAB_INACTIVE_COLOR
        button.TextStrokeTransparency = 1
    end

    -- Activate the selected content frame and button
    CONTENT_FRAMES[tabName].Visible = true
    TAB_BUTTONS[tabName].BackgroundColor3 = TAB_ACTIVE_COLOR
    TAB_BUTTONS[tabName].TextStrokeTransparency = 0.8
    ACTIVE_TAB = tabName
    
    -- Force a CanvasSize update and reset scroll for the newly active tab
    local tabContainer = CONTENT_FRAMES[tabName]:FindFirstChild("ButtonContainer")
    local tabScrollingFrame = CONTENT_FRAMES[tabName]
    local tabLayout = tabContainer:FindFirstChildOfClass("UIListLayout")
    
    if tabLayout and tabContainer and tabScrollingFrame then
        task.spawn(updateCanvasSize, tabScrollingFrame, tabContainer, tabLayout)
    end
end

-- Function to create a tab button
local function createTabButton(tabName, displayText)
    local TabButton = Instance.new("TextButton")
    TabButton.Name = tabName .. "Tab"
    TabButton.Size = UDim2.new(1, 0, 0, 45)
    TabButton.Text = displayText
    TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    TabButton.BackgroundColor3 = TAB_INACTIVE_COLOR
    TabButton.BorderSizePixel = 0
    TabButton.Font = Enum.Font.SourceSansSemibold
    TabButton.TextSize = 18
    TabButton.Parent = Sidebar
    
    local UICornerTab = Instance.new("UICorner")
    UICornerTab.CornerRadius = UDim.new(0, 8)
    UICornerTab.Parent = TabButton

    TabButton.MouseButton1Click:Connect(function()
        switchTab(tabName)
    end)
    
    TAB_BUTTONS[tabName] = TabButton
end

-- Function to create the scrolling content for a tab
local function createTabContent(tabName, buttonConfig)
    -- Scrolling Frame
    local ScrollingContent = Instance.new("ScrollingFrame")
    ScrollingContent.Name = tabName .. "ScrollingContent"
    ScrollingContent.Size = UDim2.new(1, 0, 1, 0)
    ScrollingContent.BackgroundTransparency = 1
    ScrollingContent.Parent = ContentArea
    ScrollingContent.ScrollingDirection = Enum.ScrollingDirection.Y
    ScrollingContent.CanvasSize = UDim2.new(0, 0, 0, 0)
    ScrollingContent.Active = true
    ScrollingContent.ScrollBarThickness = 17
    ScrollingContent.VerticalScrollBarPosition = Enum.VerticalScrollBarPosition.Right
    ScrollingContent.Visible = false -- Start invisible

    -- Button Container
    local ButtonContainer = Instance.new("Frame")
    ButtonContainer.Name = "ButtonContainer"
    ButtonContainer.Size = UDim2.new(1, 0, 0, 0) -- Auto-resized
    ButtonContainer.BackgroundTransparency = 1
    ButtonContainer.Parent = ScrollingContent

    -- Layout
    local UIListLayout = Instance.new("UIListLayout")
    UIListLayout.Padding = UDim.new(0, 10)
    UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    UIListLayout.VerticalAlignment = Enum.VerticalAlignment.Top
    UIListLayout.FillDirection = Enum.FillDirection.Vertical
    UIListLayout.Parent = ButtonContainer

    -- Padding
    local UIPadding = Instance.new("UIPadding")
    UIPadding.PaddingTop = UDim.new(0, 15)
    UIPadding.PaddingBottom = UDim.new(0, 15)
    UIPadding.PaddingLeft = UDim.new(0, 15)
    UIPadding.PaddingRight = UDim.new(0, 15)
    UIPadding.Parent = ButtonContainer

    -- Create buttons inside the container
    for _, config in ipairs(buttonConfig) do
        -- config.Text and config.Func are now guaranteed due to the fix
        createButton(config.Name, config.Text, config.Func, ButtonContainer)
    end

    -- Store reference
    CONTENT_FRAMES[tabName] = ScrollingContent
    
    -- Initial Canvas Size calculation (must run in a separate thread)
    -- Note: This initial run might not be perfect since the frame is invisible,
    -- but it ensures layout properties exist for the main switchTab call.
    task.spawn(updateCanvasSize, ScrollingContent, ButtonContainer, UIListLayout)
end


----------------------------------------------------------------------
-- 7. GUI INITIALIZATION (Create Tabs and Content)
----------------------------------------------------------------------

-- 1. Create Tab Buttons
createTabButton("Main", "Main Scripts")
createTabButton("Gloves A-G", "Gloves (A-G)")
createTabButton("Gloves H-R", "Gloves (H-R)")
createTabButton("Gloves S-Z", "Gloves (S-Z)")

-- 2. Create Tab Content
createTabContent("Main", ALL_BUTTONS_CONFIG["Main"])
createTabContent("Gloves A-G", ALL_BUTTONS_CONFIG["Gloves A-G"])
createTabContent("Gloves H-R", ALL_BUTTONS_CONFIG["Gloves H-R"])
createTabContent("Gloves S-Z", ALL_BUTTONS_CONFIG["Gloves S-Z"])

-- 3. Set the initial active tab (will ensure visibility and scroll reset)
switchTab(ACTIVE_TAB)


----------------------------------------------------------------------
-- 8. Event Connections
----------------------------------------------------------------------

-- Open Panel
ToggleButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = true
    ToggleButton.Visible = false
    -- When opening, ensure the last active tab is displayed and scroll is set to top
    switchTab(ACTIVE_TAB)
end)

-- Close Panel
CloseButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    ToggleButton.Visible = true
end)
